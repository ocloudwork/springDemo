<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ocloudwork.spring.demo.dao.ITestXmlDAO">
    <!--<cache type="org.mybatis.caches.ehcache.LoggingEhcache" />-->
    <!--<cache type="org.mybatis.caches.ehcache.EhcacheCache"/>-->
    <select id="findAccountsById" resultType="com.ocloudwork.spring.demo.po.Account">
    <![CDATA[


            select  id as id,
			 name as name,
			 money as money
			 from account
			 where
			 id >= #{id}


        ]]>
  </select>
    <select id="getAccountById" parameterType="int"
            resultType="com.ocloudwork.spring.demo.po.Account">
    <![CDATA[


            select  id as id,name as name,money as money
			 from account
			 where
			id = #{id}


        ]]>
  </select>
    <insert id="insertAccount" parameterType="com.ocloudwork.spring.demo.po.Account"
            keyColumn="`id`" keyProperty="`id`" useGeneratedKeys="true">
        insert into account (name,money) values (#{name},#{money})
    </insert>
</mapper>